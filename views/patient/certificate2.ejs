<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Certificate</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body>
  <div id="certificate-section" class="container-fluid mt-5">
    <div class="row justify-content-center">
      <div class="col-8">
        <div class="card">
          <div class="card-body">
            <h1 class="text-center bg-light">Certificate of Vaccination</h1>
            <hr>
            <p>This certificate is presented to</p>
            <h2 class="text-center"><%= data.patient.Fullname %></h2>
            <p>for receiving the COVID-19 <b>dose 2 vaccine</b> on:</p>
            <h3 class="text-center"><%= data.patient.assignedtimeslotv2 %></h3>
            <hr>
            <div class="row justify-content-center">
              <div class="col-sm-6 text-center">
                <h4>Medical personnel</h4>
                <p>Name:<%= data.personnel.Fullname%> </p>
                <p>Email:<%= data.personnel.email%></p>
              </div>
            </div>
            <hr>
            <p class="text-center">This certificate is proof that the above-named individual has been fully vaccinated against COVID-19 in accordance with the Centers for Disease Control and Prevention (CDC) guidelines.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>

<div class = "row justify-content-center mt-2">
 <button id="download-certificate-btn" class="btn btn-primary" onclick="download()">Download Certificate</button>
</div>

<!-- Include jsPDF library -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>

<!-- JavaScript code to handle the download button click event -->
<script>
  // Get the Download Certificate button element
  const downloadBtn = document.getElementById('download-certificate-btn');

  // Add a click event listener to the button

  function download(){
// Get the certificate section element
const certificateSection = document.getElementById('certificate-section');

// Create a new jsPDF instance
const doc = new jsPDF();

// Convert the certificate section HTML content to PDF and add it to the document
doc.html(certificateSection, {
  callback: function (doc) {
    // Save the PDF as a file with a name "certificate.pdf"
    doc.save('certificate.pdf');
  }
});
}
  
  downloadBtn.addEventListener('click', download);
</script>